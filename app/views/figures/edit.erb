<h1> Edit --> <%= @figure.name %></h1>
<form method="post" action="/figures/<%= @figure.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<label>Name</label>
<input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name%>"><br><br>

<label>Title:</label><br>
<h2>Choose form an Existing title</h2>
<% @titles.each do |title|%>
<input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id%>" <%= 'checked' if @figure.titles.include?(title) %>>
<%= title.name %>
<br>
<% end %>

<h2>Create a New Title<h2><br>
<label>Title:</label>
<input type="text" name="title[name]" id="new_title">
<br><br>

<label>Landmarks:</label>
<h3>Choose from an existing landmark</h3>
<% @landmarks.each do |landmark|%>
<input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id%>" id="landmark_<%= landmark.id%>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
<% landmark.name %>
<% end %>
<br><br>

<h3>Create a New Landmark</h3>
<label>Landmark:</label>
<input type="text" name="landmark[name]" id="new_landmark">

<br><br>

<input type="submit" value="Edit Figure">

</form>
